<?xml version="1.0" encoding="utf-8"?>

<!-- Config Geral -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/welcome_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/nashbackground"
    tools:context=".BoasVindas"
    android:fontFamily="@font/jakartaregular">

    <AbsoluteLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- H2 -->
        <TextView
            android:id="@+id/welcome_text_h2"
            android:layout_width="366dp"
            android:layout_height="132dp"
            android:layout_marginTop="8dp"
            android:layout_x="21dp"
            android:layout_y="465dp"
            android:fontFamily="@font/jakartaregular"
            android:gravity="center"
            android:text="Curtiu? Arrasta pra direita. Não faz seu tipo? Esquerda. Quer mostrar que gostou mesmo? Joga pra cima!"
            android:textColor="@color/white"
            android:textSize="23sp"
            app:layout_constraintTop_toBottomOf="@id/welcome_text_h1"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="25dp" />

        <!-- H1 -->
        <TextView
            android:id="@+id/welcome_text_h1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_x="1dp"
            android:layout_y="363dp"
            android:fontFamily="@font/jakartabold"
            android:gravity="center"
            android:letterSpacing="0"
            android:text="Jogos que conectam, amizades que duram"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/welcome_image"
            tools:ignore="MissingConstraints,NotSibling"
            tools:layout_editor_absoluteX="6dp" />

        <!-- Imagem de Boas Vindas -->
        <ImageView
            android:id="@+id/welcome_image"
            android:layout_width="match_parent"
            android:layout_height="253dp"
            android:layout_x="0dp"
            android:layout_y="98dp"
            android:scaleType="centerCrop"
            android:src="@drawable/imagewelcome"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="35dp"
            tools:layout_editor_absoluteY="244dp" />

        <!-- Logo no header -->
        <ImageView
            android:id="@+id/logo_image_header"
            android:layout_width="120dp"
            android:layout_height="53dp"
            android:layout_x="147dp"
            android:layout_y="37dp"
            android:src="@drawable/logo"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="127dp"
            tools:layout_editor_absoluteY="16dp" />

        <!-- Botão "Começar" para avançar na tela de boas-vindas para o login -->
        <Button
            android:id="@+id/button_start"
            android:layout_width="363dp"
            android:layout_height="wrap_content"
            android:layout_x="22dp"
            android:layout_y="802dp"
            android:backgroundTint="@color/verdenash"
            android:fontFamily="@font/jakartabold"
            android:padding="16dp"
            android:text="Começar"

            android:textColor="@android:color/white"
            app:cornerRadius="12dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="19dp"
            tools:layout_editor_absoluteY="550dp" />
    </AbsoluteLayout>

</LinearLayout>
